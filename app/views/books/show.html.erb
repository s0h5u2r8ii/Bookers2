<body style="">

    <div class="body">
      <div class="container">
        <div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <img class="attachment user profile_image" alt="Profile image">
    <table class="table">
      <tbody><tr></tr>
      <tr>
        <th>name</th>
      </tr>
      <tr>
        <th>introduction</th>
      </tr>
</tbody></table>

<div class="row">
  <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_282" href="/users/edit"></a>
</div>

    <h2>New book</h2>
  <div class="field row">
    <% if @book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    </div>
  </div>
    <% end %>
    <%= form_for(@book) do |f| %>
    <div class="field row">
    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>
  </div>
  </div>

  <div class="field row">
    <h4>Opinion</h4>
    <%= f.text_area :opinion, class: "book_body" %>
  </div>

  <div class="actions row">
    <h4></h4>
    <%= f.submit 'Create Book' %>
</div>
  <% end %>

  </div>

  <div class="col-xs-9">
    <h2>Book detail</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book|%>
      <tr>
        <td><%= book.title %></td>
        <%= link_to "", book_path(book), class: "book_#{id}" %>
       <td><%= book.opinion %></td>

      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
      </div>
    </div>


      </div>
    </div>




</body>