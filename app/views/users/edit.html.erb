<h2>User info</h2>

<%= form_for(@user_image) do |f| %>

  <% if @user_image.errors.any? %>
    <h2><%= @user_image.errors.count %>件のエラーが発生しました</h2>
    <ul>
      <% @user_image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <div class="field">
    <label for="user_name">Name</label>
    <br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <label for="user_image">Image</label>
    <br>
    <%= f.attachment_field :image %>
  </div>
  <div class="field">
    <label for="user_introduction">Introduction</label>
    <br>
    <%= f.text_area :introduction %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>