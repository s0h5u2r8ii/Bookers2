<% if flash[:notice] %>
  <div class="flash" style="color: green;">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-3">
  <h2>User info</h2>
  <table class="table">

   <%= attachment_image_tag @users,:profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>


   <tr>
      <th>name</th>
      <th><%= @users.name  %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @users.introduction %></th>
    </tr>
  </table>

  <div class='row'>
    <%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
  </div>


  <h2>New book</h2>

  <%= form_for(@book) do |f| %>

<% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>

  <div class="field row">
     <label for="book_title">Title</label><br>
     <%= f.text_field :title, class: "col-xs-12 book_title"  %>
  </div>

  <div class="field row">
   <label for="book_opinion">Opinion</label><br>
   <%= f.text_area :opinion, class: "col-xs-12 book_body" %>
  </div>

  <div class="actions row">
    <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
  </div>

  <% end %>

</div>

<div class="col-xs-9">
<h2>Books</h2>

<table class="table table-hover table-inverse">
<thead>
<tr>
<th></th>
<th>Title</th>
<th>Opinion</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>

<% @post.each do |book|%>
  <tr>
    <td><%= attachment_image_tag @users, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image_mini.jpg" %></td>
    <td><%= link_to book.title, book_path(book), class: "book_#{book.id}" %></td>
    <td><%= book.opinion %></td>
  </tr>
<% end %>

</tbody>
</table>
</div>
</div>
</div>
</div>

