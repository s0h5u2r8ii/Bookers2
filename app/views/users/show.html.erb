<div class="row">
  <div class="col-xs-3">
  <h2>User info</h2>
  <img class="attachment user profile_image" alt="Profile image">
  <table class="table">
   <tr>
      <th>name</th>
      <th><%  %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%  %></th>
    </tr>
  </table>

  <div class='row'>
    <a class="col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_282" href="/users/282/edit"></a>
  </div>


  <h2>New book</h2>

  <%= form_for(@book) do |f| %>

  <div class="field row">
     <label for="book_title">Title</label>
     <%= f.text_field :title, class: "book_title"  %>
  </div>

  <div class="field row">
   <label for="book_opinion">Opinion</label>
   <%= f.text_area :opinion, class: "book_body" %>
  </div>

  <div class="actions row">
    <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
  </div>

  <% end %>

</div>

<div class="col-xs-9">
<h2>Books</h2>

<table class="table table-hover table-inverse">
<thead>
<tr>
<th></th>
<th>Title</th>
<th>Opinion</th>
<th colspan="3"></th>
</tr>
</thead>
<tbody>

<% @books.each do |book|%>
  <tr>
    <td></td>
    <td><%= book.title %></td>
    <%= link_to "", book_path(book), class: "book_#{book.id}" %>
    <td><%= book.opinion %></td>
  </tr>
<% end %>

</tbody>
</table>
</div>
</div>
</div>
</div>

