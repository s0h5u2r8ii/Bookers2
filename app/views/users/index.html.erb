
  <div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
    <table class="table">
      <tbody>
      <tr>
        <th>name</th>
        <th><%= current_user.name  %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
</tbody></table>

<div class="row">
  <%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
</div>

    <h2>New book</h2>

    <%= form_for(@book) do |f| %>

    <% if @book.errors.any? %>
        <%= @book.errors.count %>件のエラーが発生しました
        <% @book.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
    <% end %>

    <div class="field row">
    <h4>Title</h4>
    <%= f.text_field :title, class: "col-xs-12 book_title" %>
  </div>


  <div class="field row">
    <h4>Opinion</h4>
    <%= f.text_area :opinion, class: "col-xs-12 book_body" %>
  </div>

  <div class="actions row">

    <%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %>
</div>
  <% end %>

  </div>

  <div class="col-xs-9">
    <h2>Users</h2>

    <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |user|%>
      <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image_mini.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show",user_path(user), class: "user_#{user.id}" %></td>

      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>
      </div>
    </div>
